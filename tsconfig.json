{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "mdb-angular-ui-kit": [
        "projects/mdb-angular-ui-kit"
      ],
      "mdb-angular-ui-kit/*": [
        "projects/mdb-angular-ui-kit/*"
      ]
    },
    "useDefineForClassFields": false
  }
}